{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "module": "esNext",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    // all the following false are to allow as much native js as possible
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": "src/main/resources/META-INF/resources/frontend/*",
    "paths": {
      "Frontend/*": [
        "*"
      ],
      "Frontend/*": [
        "src/main/resources/META-INF/resources/frontend/*"
      ]      
    }
  },
  "include": [
    "frontend/**/*.ts",
    "src/main/resources/META-INF/resources/frontend/**/*.ts",
    "types.d.ts"
  ],
  "exclude": []
}
